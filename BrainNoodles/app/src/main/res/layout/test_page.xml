<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Misc.MainActivity"
    android:background="@drawable/choose_test_bg">

    <ImageView

        android:src="@drawable/answerbutton_a"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/button1"
        android:clickable="true"
        android:onClick="onButton1Click"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <ImageView
        android:src="@drawable/answerbutton_b"
        android:width="50dp"
        android:height="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="B"
        android:id="@+id/button2"
        android:onClick="onButton1Click"
        android:clickable="true"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:src="@drawable/answerbutton_c"
        android:width="75dp"
        android:height="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="C"
        android:id="@+id/button3"
        android:onClick="onButton1Click"
        android:clickable="true"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(Answer A)"
        android:id="@+id/textView1"
        android:editable="false"
        android:textColor="#ff000000"

        android:layout_alignBottom="@+id/button1"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(Answer B)"
        android:id="@+id/textView2"
        android:textColor="#ff000000"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(Answer C)"
        android:id="@+id/textView3"
        android:textColor="#ff000000"
        android:layout_alignBottom="@+id/button3"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignStart="@+id/textView1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(Question Number)"
        android:id="@+id/questionNumber"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="(Question)"
        android:id="@+id/questionView"
        android:textColor="#ff000000"
        android:layout_below="@+id/questionView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/questionView2"
        android:textColor="#ff000000"
        android:layout_below="@+id/questionNumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="(Timer)"
        android:textColor="#ff000000"
        android:id="@+id/textCounter"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/questionNumber"
        android:layout_alignEnd="@+id/questionNumber" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Timer: "
        android:id="@+id/textView6"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/textCounter"
        android:layout_toStartOf="@+id/textCounter" />

</RelativeLayout>
